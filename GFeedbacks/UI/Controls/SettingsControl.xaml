<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GFeedbacks.UI.Controls"
             xmlns:UI="clr-namespace:GFeedbacks.UI" x:Class="GFeedbacks.UI.Controls.SettingsControl"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.DataContext>
        <UI:SettingsController/>
    </UserControl.DataContext>
    <StackPanel Margin="10,10,10,10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="70"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0">Profile</Label>
            <ComboBox x:Name="CmbProfile" Grid.Column="1" Margin="10,0,10,0"></ComboBox>
            <Button Grid.Column="2">Add</Button>
        </Grid>
    </StackPanel>
</UserControl>
